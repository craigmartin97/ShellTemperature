<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="LogoImageStyle" TargetType="{x:Type Image}">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="15,3,0,0" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Width" Value="100" />
        <Setter Property="Source" Value="../Images/mpiLion.png" />
    </Style>

    <!-- Dialog image style, for images on the custom dialog window/usercontrols -->
    <Style x:Key="DialogImageStyle" TargetType="{x:Type Image}">
        <Setter Property="Margin" Value="30" />
    </Style>

</ResourceDictionary>