<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="LogoImageStyle" TargetType="{x:Type Image}">
        <Setter Property="Width" Value="30" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="15,5,0,5" />
        <Setter Property="Source" Value="../Images/mpiLogo.ico" />
    </Style>

    <!-- Dialog image style, for images on the custom dialog window/usercontrols -->
    <Style x:Key="DialogImageStyle" TargetType="{x:Type Image}">
        <Setter Property="Margin" Value="30" />
    </Style>
    
</ResourceDictionary>